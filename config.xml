<?xml version='1.3' encoding='utf-8'?>
<widget id="com.page.planner" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>PagePlanner</name>
    <description>
        Page Planner for Art Sketchbooks
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
    </author>
    <content src="index.html" />
    <access origin="*" subdomains="true" />
    <preference name="orientation" value="landscape" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="splash-screen-duration" value="0" />
    <icon src="Icon.png" />
    <allow-navigation href="http://*/*" />
    <allow-intent href="https://*/*" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
</widget>